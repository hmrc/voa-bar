<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="uk.gov.hmrc.play.logging.JsonEncoder"/>
    </appender>

    <logger name="uk.gov" level="${logger.uk.gov:-WARN}"/>
    <logger name="uk.gov.hmrc.voabar.services.DefaultWebBarsService" level="DEBUG"/>
    <logger name="uk.gov.hmrc.voabar.services.SubmissionProcessingService" level="INFO"/>

    <logger name="v2-validation" level="INFO"/>

    <root level="${logger.application:-WARN}">
        <appender-ref ref="STDOUT"/>
    </root>

</configuration>
